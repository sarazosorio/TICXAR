@model FrontEnd.Models.RegistroEstudiantes


<div class="row">
    <h3 class="title">Estudiantes</h3>
    <div class="col-md-4 signupFrm">
        <form asp-action="@ViewBag.titulo" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <h3> @ViewBag.titulo</h3>
            <div>
                <div class="form-group" style="display:none;">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="row col-md-12">
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="PrimerNombre" class="control-label label"></label>
                        <input asp-for="PrimerNombre" class="form-control input" />
                        <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="SegundoNombre" class="control-label label"></label>
                        <input asp-for="SegundoNombre" class="form-control input" />
                        <span asp-validation-for="SegundoNombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="PrimerApellido" class="control-label label"></label>
                        <input asp-for="PrimerApellido" class="form-control input" />
                        <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="SegundoApellido" class="control-label label"></label>
                        <input asp-for="SegundoApellido" class="form-control input" />
                        <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                    </div>
                </div>
                 <div class="row col-md-12">
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="Correo" class="control-label label"></label>
                        <input asp-for="Correo" class="form-control input" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="Telefono" class="control-label label"></label>
                        <input asp-for="Telefono" class="form-control input" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                 <div class="row col-md-12">
                    <div class="form-group col-md-4 inputContainer">
                        <label asp-for="FechaNacimiento" class="control-label label"></label>
                        <input asp-for="FechaNacimiento" class="form-control input" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div> 
                   </div> 
                <div class="form-group">
                    <br />
                </div> 
            </div>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Retornar</a>
            </div>
        </form>
    </div>
    <div class="col-md-8">
    <!--agregar la vista parcial-->
        @Html.Partial("ListadoEstudiantes",(List<RegistroEstudiantes>)ViewBag.estudiantes)
    </div>
</div>
<div>
    @ViewBag.mensaje
</div>
<br />
<br />

@model FrontEnd.Models.RegistroMaterias


<div class="row">
    <h3 class="title">Materias</h3>
    <div class="col-md-4 signupFrm">
        <form asp-action="@ViewBag.titulo" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3> @ViewBag.titulo</h3>
            <div>
                <div class="form-group" style="display:none;">
                    <label asp-for="IDMateria" class="control-label"></label>
                    <input asp-for="IDMateria" class="form-control" readonly="readonly"/>
                    <span asp-validation-for="IDMateria" class="text-danger"></span>
                </div>
                <div class="row col-md-12">
                     <div class="form-group col-md-4 inputContainer">
                        <label asp-for="Nombre_materia" class="control-label label"></label>
                        <input asp-for="Nombre_materia" class="form-control input" />
                        <span asp-validation-for="Nombre_materia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <br />
                    </div>
                </div>
             </div>
            
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Retornar</a>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <!--agregar la vista parcial-->
        @Html.Partial("ListadoMaterias",(List<RegistroMaterias>)ViewBag.materias)
    </div>
</div>
<div>
    @ViewBag.mensaje
</div>
